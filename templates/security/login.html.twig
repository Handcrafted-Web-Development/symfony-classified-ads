{% extends 'base.html.twig' %}

{% block layout %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="py-12">
            <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
                <div class="bg-white overflow-hidden shadow-md sm:rounded-lg">
                    <div class="p-6 text-gray-900">
                        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl mb-6">Sign In</h1>
                        <div class="mb-6">
                            <label for="inputEmail" class="block mb-2 text-sm font-medium text-gray-900">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" autocomplete="email" placeholder="contact@symfony.com" required autofocus>
                        </div>
                        <div class="mb-6">
                            <label for="inputPassword" class="block mb-2 text-sm font-medium text-gray-900">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" autocomplete="current-password" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Sign In</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
